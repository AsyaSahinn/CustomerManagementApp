@using CustomerManagement.Models.DTO;
@model CustomerRegisterModel

@{
    ViewData["Title"] = "Müşteri Detayları";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Müşteri Bilgileri</h3>
                    </div>
                    <div class="card-body">
                        @if (Model != null)
                        {
                            <dl class="row">
                                <dt class="col-sm-4">Ad:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Soyad:</dt>
                                <dd class="col-sm-8">@Model.Surname</dd>

                                <dt class="col-sm-4">E-posta:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Telefon Numarası:</dt>
                                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                                <dt class="col-sm-4">Doğum Tarihi:</dt>
                                <dd class="col-sm-8">
                                    @(Model.Birthday.HasValue ? Model.Birthday.Value.ToShortDateString() : "-")
                                </dd>

                                <dt class="col-sm-4">Adres:</dt>
                                <dd class="col-sm-8">@Model.Address</dd>

                                <dt class="col-sm-4">Meslek:</dt>
                                <dd class="col-sm-8">@Model.Job</dd>
                            </dl>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                Müşteri bulunamadı.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
